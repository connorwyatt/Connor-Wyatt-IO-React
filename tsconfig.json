{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "jsx": "preserve",
    "importHelpers": false,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules"
  ]
}
